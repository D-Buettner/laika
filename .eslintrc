{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "brace-style": [2, "1tbs"],
    "camelcase": [2],
    "no-mixed-spaces-and-tabs": 2,
    "no-redeclare": 2,
    "no-spaced-func": [2],
    "no-unused-vars": [2],
    "no-undef": [2],
    "quotes": [2, "single"],
    "keyword-spacing": [2],
    "object-curly-spacing": [2, "never"],
    "space-infix-ops": [2],
    "space-in-parens": [2, "never"],
    "valid-jsdoc": [2],
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-multiple-empty-lines": [2, {"max": 1}],
    "space-before-function-paren": [2, "never"],
    "spaced-comment": [2, "always"],
    "space-before-blocks": [2, "always"]
  },
  globals: {
    "Polymer": false,
    "assert": false,
    "sinon": false,
    "Promise": false
  }
}
